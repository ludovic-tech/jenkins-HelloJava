pipeline {
    agent any
    stages {
        stage('clone') {
            steps {
                sh "rm -rf *"
                sh "git clone https://github.com/ludovic-tech/jenkins-HelloJava"
                }
            }
        stage('build') {
            steps {
                sh "cd jenkins-HelloJava/ && javac Main.java"
            }
        }
        stage('run') {
            steps {
                sh "cd jenkins-HelloJava/ && java Main"
            }
        }
    }
}
